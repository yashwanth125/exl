{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
             "style": "accent",
            "items": [
                {
                    "type": "ColumnSet",
                   
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "size": "Large",
                                    "text": "Insurance Policies",
                                    "wrap": true
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "Name",
                                    "wrap": true
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "Premium",
                                    "wrap": true
                                }
                            ],
                            "width": "auto"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "$data": "${properties}",
                                    "type": "TextBlock",
                                    "color": "Accent",
                                    "text": "${name}",
                                    "wrap": true
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "$data": "${properties}",
                                    "type": "TextBlock",
                                    "size": "Medium",
                                    "horizontalAlignment": "Right",
                                    "text": "${cover} INR",
                                    "wrap": true
                                }
                            ],
                            "width": "auto"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}